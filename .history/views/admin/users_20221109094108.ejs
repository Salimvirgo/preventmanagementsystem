<div
  class="modal fade"
  id="staticBackdrop"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit User</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 px-5 py-3">
      <div class="row">
        <div class="col-md-5 p-3">
          <!-- <%- include ('../partials/messages') %> -->
          <div class="alert-container"></div>
          <div class="card px-4 pt-4 pb-3 mt-0 mb-2 bg-light">
            <form class="form" id="saveUserForm">
              <div class="form-row">
                <div class="col-6">
                  <div class="form-group">
                    <label for="">Fullname</label>
                    <input type="text" name="fullname" id="fullname"
                    class="form-control" placeholder="Fullname"
                    aria-describedby="helpId" value="<%- typeof user !=
                    'undefined' ? user.fullname : "" %>">
                    <small id="helpId" class="text-muted"></small>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label for="">Username</label>
                    <input type="text" name="username" id="username"
                    class="form-control" placeholder="Username"
                    aria-describedby="helpId" value="<%- typeof user !=
                    'undefined' ? user.username : "" %>">
                    <small id="helpId" class="text-muted"></small>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col-6">
                  <div class="form-group">
                    <label for="">User's Email</label>
                    <input type="email" name="email" id="email"
                    class="form-control" placeholder="john@orange.sl"
                    aria-describedby="helpId" value="<%- typeof user !=
                    'undefined' ? user.email : "" %>">
                    <small class="text-muted"></small>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label for="">User's Phone Number</label>
                    <input type="text" name="number" id="number"
                    class="form-control" placeholder="+23278121212"
                    aria-describedby="helpId" value="<%- typeof user !=
                    'undefined' ? user.number : "" %>">
                    <small class="text-muted"></small>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col-6">
                  <div class="form-group">
                    <label for="">Department</label>
                    <select
                      class="form-control"
                      name="department"
                      id="department"
                      required
                    >
                      <option selected value="">Select User Department</option>
                      <% if (typeof depts !='undefined' ) { %> <%
                      depts.forEach(dept=> { %>
                      <option value="<%- dept.deptId %>">
                        <%- dept.deptname %>
                      </option>
                      <% }) %> <% } %>
                    </select>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label for="">User Level</label>
                    <select
                      class="form-control"
                      name="userLevel"
                      id="userLevel"
                      required
                    >
                      <option selected value="">Select User Level</option>
                      <% if (typeof levels !='undefined' ) { %> <%
                      levels.forEach(level=> { %>
                      <option value="<%- level.levelId %>">
                        <%- level.levelName %>
                      </option>
                      <% }) %> <% } %>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="col-6">
                  <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" name="password" id="password"
                    class="form-control" placeholder="Password"
                    aria-describedby="helpId" value="<%- typeof user !=
                    'undefined' ? user.password : "" %>">
                    <small class="text-muted"></small>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label for="">Confirm Password</label>
                    <input type="password" name="confirmPassword"
                    id="confirmPassword" class="form-control"
                    placeholder="Confirm Password" aria-describedby="helpId"
                    value="<%- typeof user != 'undefined' ? user.confirmPassword
                    : "" %>">
                    <small
                      id="helpId"
                      class="text-muted validationError"
                    ></small>
                  </div>
                </div>
              </div>
              <button
                type="submit"
                class="btn btn-outline-primary btn-rounded btn-block"
                id="btn-saveUser"
              >
                Save
              </button>
            </form>
          </div>
        </div>

        <div class="col-md-7 p-1">
          <table class="table table-hover table-striped" id="usersTable">
            <thead class="thead-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col" colspan="2">Fullname</th>
                <th scope="col">Department</th>
                <th scope="col">userLevel</th>
                <th scope="col" colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (typeof users !='undefined' ) { %> <% for( let index=0;
              index < users.length; index++ ) { %>
              <tr>
                <td scope="row" colspan="2"><%- (index+1) %></td>
                <td scope="row"><%- users[index].fullname %></td>
                <td scope="row"><%- users[index].deptname %></td>

                <td scope="row"><%- users[index].levelName %></td>
                <td scope="row">
                  <button
                    data-userid="<%= users[index].userId %> "
                    class="btn btn-info btn-sm"
                    id="btnEditUsers"
                  >
                    <i class="fas fa-edit"></i>
                  </button>

                  <button
                    class="btn btn-danger btn-sm"
                    id="btnDeleteUsers"
                    data-userid="<%- users[index].userId %>"
                  >
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </button>
                </td>
              </tr>
              <% } %> <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
