          <fieldset id="event">
            <div class="form-card">
              <div class="row">
                <div class="col-7">
                  <h2 class="fs-title">Event Information:</h2>
                </div>
              </div>
              <label class="fieldlabels">Fullname: *</label>
              <input type="text" name="requestorName" id="requestorName"
              class="form-control" placeholder="" aria-describedby="helpId"
              disabled value="<%- typeof fullname != 'undefined' ? fullname : ""
              %>" />
              <label class="fieldlabels">Event Title: *</label>
              <input
                type="text"
                class="form-control"
                name="eventTitle"
                id="eventTitle"
                placeholder="Event Title"
              />
              <label class="fieldlabels">Event Date: *</label>
              <input
                type="datetime-local"
                class="form-control"
                name="eventDate"
                id="eventDate"
                class="form-control"
              />
              <label class="fieldlabels">Type Of Event: *</label>
              <input
                type="text"
                class="form-control"
                name="eventType"
                id="eventType"
                placeholder="Event Type"
              />
              <label class="fieldlabels">Venue: *</label>
              <input
                type="text"
                class="form-control"
                name="venue"
                id="venue"
                placeholder="event venue."
              />
            </div>
            <input
              type="button"
              name="next"
              class="next action-button"
              value="Next"
            />
            <input
              type="button"
              name="previous"
              class="previous action-button-previous"
              value="Previous"
            />
          </fieldset>
          <fieldset id="media">
            <div class="form-card">
              <div class="row">
                <div class="col-7">
                  <h2 class="fs-title">Media Information:</h2>
                </div>
                <!-- <div class="col-5">
                                  <h2 class="steps">Step 3 - 4</h2>
                              </div> -->
              </div>

              <label class="fieldlabels">Media Type: *</label>
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="mediatype"
                  id="print"
                  value="Print"
                />
                <label class="form-check-label">Print</label>
              </div>
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="mediatype"
                  id="radio"
                  value="Radio"
                />
                <label class="form-check-label">Radio</label>
              </div>
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="mediatype"
                  id="television"
                  value="Television"
                />
                <label class="form-check-label">Television</label>
              </div>
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="mediatype"
                  id="digital"
                  value="Digital"
                />
                <label class="form-check-label">Digital </label>
              </div>
              <label class="fieldlabels"
                >Number of Print Personnel Required: *</label
              >
              <input
                type="number"
                class="form-control"
                placeholder="Number of print Personnel"
                name="numberOfPrint"
                id="numberOfPrint"
                min="1"
                max="50"
                required
              />
              <label class="fieldlabels"
                >Number of Radio Personnel Required: *</label
              >
              <input
                type="number"
                class="form-control"
                placeholder="Number of radio Personnel"
                name="numberOfRadio"
                id="numberOfRadio"
                min="1"
                max="50"
                required
              />
              <label class="fieldlabels"
                >Number of Television Personnel Required: *</label
              >
              <input
                type="number"
                class="form-control"
                placeholder="Number of Tv Personnel"
                name="numberOfTv"
                id="numberOfTv"
                min="1"
                max="50"
                required
              />
              <!-- <label class="fieldlabels">Funding: *</label>

