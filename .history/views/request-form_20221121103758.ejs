              </select> -->
              <br />
              <label class="fieldlabels">Available Budget: *</label>
              <input
                type="text"
                name="budget"
                id="budget"
                placeholder="Available Budget"
              />
            </div>
            <button type="submit" class="next action-button">Submit</button>
            <input
              type="button"
              name="previous"
              class="previous action-button-previous"
              value="Previous"
            />
