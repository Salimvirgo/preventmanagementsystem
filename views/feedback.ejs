
<div class="container-fluid">
  <div><a class="btn btn-success btn-sm d-none d-sm-inline-block my-2" role="button" id="" href="/post-request"><i class="fa fa-arrow-left text-white-50" aria-hidden="true"></i>&nbsp;Back</a></div>
    <div class="row justify-content-center">
        <!-- <div class="col-11 col-sm-9 col-md-7 col-lg-6 col-xl-9 p-0 mt-3 mb-2"> -->
            <div class="card px-4 pt-4 pb- mt-1 mb-2">
              <div class="feedbackheading text-center">
                <h2 id="heading">Feedback Form</h2>
              </div>
              <div class="card align-items-center">
                <div class="col-lg-12">
                  <%- include('partials/messages') %>
                    <form class="p-2" method="post" action="/feedback">
                      <div class="form-row">
            
                        <div class="col-lg-6">
                          <!-- First Form Group  -->
                          <div class="form-group">
                            <label for="">Requestor Fullname</label>
                            <input type="text" name="requestorName" id="requestorName" class="form-control" placeholder=""
                              aria-describedby="helpId" disabled value="<%- typeof fullname != 'undefined' ? fullname : "" %>">
                          </div>
                          <!-- /End of First form Group -->
                        </div>
                        <div class="col-lg-6">
                          <!-- Second Form Group -->
                          <div class="form-group">
                            <label for="">Department</label>
                            <input type="text" name="department" id="dept" class="form-control" disabled
                              value="<%- typeof deptname != 'undefined' ? deptname : "" %>">
                          </div>
                          <!-- /End of Second Form Group -->
                        </div>
                      </div>
                        <!-- /End of Fifth Form Group -->
      
                        <div class="form-row">
                          
                          <div class="col-lg-12">
                            <!-- Sixth form group -->
                            <label for="">Feedback</label>
                            <textarea
                              class="form-control"
                              name="userFeedback" 
                              id="userFeedback"
                              rows="4"
                              placeholder="What is your view?"
                            ></textarea>
                            
                          </div>
              
                        </div>
                        <button type="" class="btn btn-primary col-12 my-2">Submit Feedback
                          <i class="fas fa-long-arrow-alt-right ms-1"></i></button>
                          <div class="form-outline">
                            
                        
                    </form>
          </div>
              </div>
              
              
              
            </div>
            
        </div>
        
    </div>
</div>

  
